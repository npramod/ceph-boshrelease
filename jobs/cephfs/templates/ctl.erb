#!/bin/bash

RUN_DIR=/var/vcap/sys/run/cephfs
LOG_DIR=/var/vcap/sys/log/cephfs
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/cephfs

#    export PATH=/var/vcap/packages/ruby_1.9.3/bin:$PATH

#    exec /var/vcap/packages/ruby_1.9.3/bin/bundle exec \
#      rackup -p <%= properties.web_ui.port %> \
#      >>  $LOG_DIR/web_ui.stdout.log \
#      2>> $LOG_DIR/web_ui.stderr.log

    sudo start ceph-all

    ;;

  stop)
#    kill -9 `cat $PIDFILE`
#    rm -f $PIDFILE
    sudo stop ceph-all
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
